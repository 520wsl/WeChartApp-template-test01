.app {
    font-size: 14px;
}

.app .ele-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    clear: both;
}
 /* 图片轮播、banner 模板 */
.swiper-view swiper {
    width: 100%;
    height: 100%;
}

.swiper-item {
    display: inline-block;
    width: 100%;
    height: 100%;
}

/* 视频轮播 模板 */
.carouselVideoPlay{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 21;
}
.carouselVideoPlay-inner{
  background-color: #fff;
}
.carouselVideoPlay video{
  width: 100%;
}
.carouselVideoPlay-close{
  float: right;
  text-align: right;
  font-size: 46.8rpx;
  margin: 11.7rpx 23.4rpx;
}

.carousel-video-play {
    position: absolute;
    width: 75rpx;
    height: 75rpx;
    line-height: 75rpx;
    font-size: 42.12rpx;
    color: #fff;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    border: 5rpx solid #fff;
}



/* 加载loading */

.loading-wrap {
    height: 50rpx;
    padding: 50rpx 0;
}

.loading-view {
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
    position: relative;
    text-align: center;
    -webkit-animation: rotate 2.0s infinite linear;
    animation: rotate 2.0s infinite linear;
}

.loading-dot1, .loading-dot2 {
    width: 50%;
    height: 50%;
    display: inline-block;
    position: absolute;
    top: 0;
    left: 20%;
    background-color: #f66087;
    border-radius: 100%;
    -webkit-animation: bounce 2.0s infinite ease-in-out;
    animation: bounce 2.0s infinite ease-in-out;
}

.loading-dot2 {
    top: auto;
    bottom: 0rpx;
    background-color: #65b6f5;
    -webkit-animation-delay: -01.0s;
    animation-delay: -1.0s;
}

@-webkit-keyframes rotate {
    100% {
        -webkit-transform: rotate(360deg);
    }
}

@keyframes rotate {
    100% {
        transform: rotate(360deg);
        -webkit-transform: rotate(360deg);
    }
}

@-webkit-keyframes bounce {
    0%, 100% {
        -webkit-transform: scale(0.0);
    }

    50% {
        -transform: scale(1.0);
    }
}

@keyframes bounce {
    0%, 100% {
        transform: scale(0.0);
        -webkit-transform: scale(0.0);
    }

    50% {
        transform: scale(1.0);
        -webkit-transform: scale(1.0);
    }
}

.hor-request-status {
    white-space: nowrap;
}

.hor-request-status .loading-wrap {
    display: inline-block;
    width: 100rpx;
    vertical-align: middle;
}

/* 请求没有数据 */

.request-none {
    text-align: center;
    padding: 50rpx 0;
}

.request-none image {
    width: 200rpx;
    height: 150rpx;
}

.request-none view {
    font-size: 24rpx;
    color: #686868;
    margin-top: 10rpx;
}

/* 请求失败 */
.request-fail{
    text-align: center;
    font-size: 24rpx;
    color: #686868;
    padding: 50rpx 0;
}

.request-refresh-btn {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 22rpx;
    color: #686868;
    border-radius: 30rpx;
    margin-top: 20rpx;
    border: 1px solid #A5A5A5;
    background-color: transparent;
}
.hor-request-status .request-fail{
  display: inline-block;
  width: 400rpx;
}

/* 加载完所有数据 */
.request-all{
  font-size: 24rpx;
  text-align:center;
  line-height:90rpx;
  color:#949494;
}
.hor-request-status .request-all{
  display: inline-block;
  width: 30rpx;
  padding: 0 30rpx;
  white-space: normal;
  line-height: 1.3em;
  vertical-align: middle;
}
